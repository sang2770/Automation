{
  "name": "automation-electron-app",
  "version": "1.0.0",
  "main": "src/main.js",
  "description": "Electron app with multi-threading Playwright automation",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-win": "electron-builder --win --publish=never",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "playwright": "^1.58.0",
    "totp-generator": "^2.0.1",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.automation.electron",
    "productName": "Automation Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "config/**/*"
    ],
    "asarUnpack": [
      "node_modules"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Auto Google"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}